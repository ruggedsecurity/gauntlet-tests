pipeline {
    agent {
        kubernetes {
            label 'gaultlt-pod'
            containerTemplate {
                name 'gauntlt'
                image 'gauntlt/gauntlt'
                ttyEnabled true
                command 'cat'
                envVars [containerEnvVar(key: 'HOSTNAME', value: 'k8s.designingdevops.com')]
            }
        }
    }
    
    options {
        // General Jenkins job properties
        buildDiscarder(logRotator(numToKeepStr:'5'))
    }

    stages {
        stage('Build and Package') {
            steps {
                container('gauntlt') {
                    sh 'gauntlt'
                }
            }
        }
    }
}