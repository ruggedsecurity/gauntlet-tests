pipeline {
    agent {
    
        kubernetes {
            label 'kubernetes'
            podTemplate( label: 'gauntlt', 
                containers: [containerTemplate(
                        image: 'gauntlt/gauntlt', 
                        name: 'gauntlt', 
                        command: 'cat', 
                        ttyEnabled: true)
                    ]),
                volumes: [hostPathVolume(hostPath: '$(pwd)', mountPath: '/working')])
        }
    }
    
    options {
        // General Jenkins job properties
        buildDiscarder(logRotator(numToKeepStr:'6'))
    }

    stages {
        
        stage('Build and Package') {
            steps {
                container('gauntlt') {
                    sh "--help"
                }
            }
        }
    }
}
