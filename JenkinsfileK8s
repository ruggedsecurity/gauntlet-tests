pipeline {
    agent {
        kubernetes {
            label 'kubernetes'
            containerTemplate {
                name 'gauntlt'
                image 'gauntlt/gauntlt'
                ttyEnabled true
            }
        }
    }
    
    options {
        // General Jenkins job properties
        buildDiscarder(logRotator(numToKeepStr:'6'))
    }

    stages {
        
        stage('Build and Package') {
            steps {
                container('gauntlt') {
                    sh "--help"
                }
            }
        }
    }
}
